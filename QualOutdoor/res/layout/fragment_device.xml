<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/model"
                style="@style/ListItem"/>
            <TextView
                android:id="@+id/model_value"
                style="@style/ListItem"
                android:text=""
                android:gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/imei"
                style="@style/ListItem"/>
            <TextView
                android:id="@+id/imei_value"
                style="@style/ListItem"
                android:text=""
                android:gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/imeisv"
                style="@style/ListItem"/>
            <TextView
                android:id="@+id/imeisv_value"
                style="@style/ListItem"
                android:text=""
                android:gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/sim_operator"
                style="@style/ListItem"/>
            <TextView
                android:id="@+id/sim_operator_value"
                style="@style/ListItem"
                android:text=""
                android:gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/mac"
                style="@style/ListItem"/>
            <TextView
                android:id="@+id/mac_value"
                style="@style/ListItem"
                android:text=""
                android:gravity="right|center_vertical"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/ip"
                style="@style/ListItem"/>
            <TextView
                android:id="@+id/ip_value"
                style="@style/ListItem"
                android:text=""
                android:gravity="right|center_vertical"/>
        </FrameLayout>

    </LinearLayout>
</ScrollView>
